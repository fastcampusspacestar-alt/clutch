---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('investment')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			.hero {
				padding: 4rem 0;
				text-align: center;
				background: linear-gradient(135deg, #1e3a5f 0%, #2d5a7b 100%);
				color: white;
				border-radius: 12px;
				margin-bottom: 3rem;
			}
			.hero h1 {
				font-size: 2.5rem;
				margin: 0 0 1rem 0;
				font-weight: 700;
			}
			.hero p {
				font-size: 1.2rem;
				opacity: 0.9;
				max-width: 600px;
				margin: 0 auto;
				line-height: 1.6;
			}
			.posts-section h2 {
				font-size: 1.8rem;
				margin-bottom: 2rem;
				color: rgb(var(--black));
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
				background: white;
				border: 1px solid #e0e0e0;
				border-radius: 8px;
				overflow: hidden;
				transition: transform 0.2s, box-shadow 0.2s;
			}
			ul li:hover {
				transform: translateY(-4px);
				box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
			}
			ul li a {
				display: block;
				text-decoration: none;
				color: inherit;
			}
			ul li img {
				width: 100%;
				height: auto;
				display: block;
			}
			.post-content {
				padding: 1.5rem;
			}
			.title {
				margin: 0 0 0.5rem 0;
				color: rgb(var(--black));
				line-height: 1.4;
				font-size: 1.4rem;
			}
			ul li:first-child .title {
				font-size: 2rem;
			}
			.date {
				margin: 0 0 0.5rem 0;
				color: rgb(var(--gray));
				font-size: 0.9rem;
			}
			.category {
				display: inline-block;
				padding: 0.25rem 0.75rem;
				background: #1e3a5f;
				color: white;
				border-radius: 4px;
				font-size: 0.875rem;
			}
			.description {
				margin: 0.5rem 0 0 0;
				color: #666;
				font-size: 0.95rem;
				line-height: 1.5;
			}
			@media (max-width: 720px) {
				.hero {
					padding: 2rem 1rem;
				}
				.hero h1 {
					font-size: 1.8rem;
				}
				.hero p {
					font-size: 1rem;
				}
				ul {
					gap: 1rem;
				}
				ul li {
					width: 100%;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="hero">
				<h1>{SITE_TITLE}</h1>
				<p>{SITE_DESCRIPTION}</p>
			</div>

			<section class="posts-section">
				<h2>최근 포스트</h2>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/investment/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<div class="post-content">
										<h4 class="title">{post.data.title}</h4>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
										{post.data.category && (
											<span class="category">{post.data.category}</span>
										)}
										<p class="description">{post.data.description}</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
